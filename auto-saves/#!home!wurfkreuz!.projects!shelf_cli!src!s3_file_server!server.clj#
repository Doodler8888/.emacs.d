;; Here, we define the namespace for our server and require the ring.adapter.jetty
;; namespace, which provides the run-jetty function for starting a Jetty server.
(ns s3-file-server.server
  (:require [ring.adapter.jetty :refer [run-jetty]]))

;; The handler takes a request map as input (which contains information about the
;; incoming request) and returns a simple response map.
(dfn handler [request]
  {:status 200
   :headers {"Content-Type" "text/plain"}
   :body "Hello, World!"})

(defn start-server []
  (run-jetty handler {:port 3000}))

(defn -main []
  (start-server))
